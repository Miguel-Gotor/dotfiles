# I3 CONFIG

# Windows Key
set $mod Mod4

for_window [class="^.*"] border pixel 0

gaps inner 12
gaps outer 6

#font pango:monospace 8
font pango:DejaVu Sans Mono 17

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

bindsym $mod+plus gaps inner current plus 5
bindsym $mod+dead_grave gaps inner current minus 5

# Launch terminal
bindsym $mod+Return --release exec $TERMINAL

# Launch browser
bindsym $mod+b exec $BROWSER 

# Kill focused window
bindsym $mod+Shift+q kill

# Launch i3-dmenu-desktop (shows only programs with .desktop file)
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop --dmenu="dmenu -i -b -fn 'Dejavu Sans Book:size=11' -nb '#000000' -nf '#FFFFFF' -sb '#FFFFFF' -sf '#000000'"

# Change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split horizontally
bindsym $mod+h split h

# Split vertically
bindsym $mod+v split v

# Fullscreen focused window
bindsym F11 fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
# bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Focus the parent container
# bindsym $mod+a focus parent
# focus the child container
#bindsym $mod+d focus child

# WORKSPACES ------------------------------------------------------------------

# Return to previous workspace by pressing the same key
workspace_auto_back_and_forth yes

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused container to workspace & immediately follow it
bindsym $mod+Shift+1 move container to workspace number $ws1; workspace number $ws1;
bindsym $mod+Shift+2 move container to workspace number $ws2; workspace number $ws2;
bindsym $mod+Shift+3 move container to workspace number $ws3; workspace number $ws3;
bindsym $mod+Shift+4 move container to workspace number $ws4; workspace number $ws4;
bindsym $mod+Shift+5 move container to workspace number $ws5; workspace number $ws5;
bindsym $mod+Shift+6 move container to workspace number $ws6; workspace number $ws6;
bindsym $mod+Shift+7 move container to workspace number $ws7; workspace number $ws7;
bindsym $mod+Shift+8 move container to workspace number $ws8; workspace number $ws8;
bindsym $mod+Shift+9 move container to workspace number $ws9; workspace number $ws9;
bindsym $mod+Shift+0 move container to workspace number $ws10; workspace number $ws10;

# Reload the configuration file
bindsym $mod+Shift+c reload
# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes' 'i3-msg exit'"

# MY BYNDSYMS -----------------------------------------------------------------

bindsym $mod+v --release exec $TERMINAL -e cava
bindsym $mod+k --release exec $TERMINAL -e qalc


# Reset default gap sizes
bindsym $mod+r gaps inner all set 12; gaps outer all set 6;

# Switch to adjacent workspaces
bindsym $mod+Control+Left workspace prev
bindsym $mod+Control+Right workspace next

# AUDIO
# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status

# 1) Using XF86 keyboard symbols + one-line cmds

# bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1% && $refresh_i3status
# bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1% && $refresh_i3status
# bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
# bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# 2) Keyboard-agnostic + POSIX-compliant scripts in $HOME/bin

# PAPLAY
# Decrease vol.
bindsym $mod+KP_Add exec --no-startup-id change-volume.sh -1
# Increase vol.
bindsym $mod+KP_Subtract exec --no-startup-id change-volume.sh +1
# Mute
bindsym $mod+m  --release exec --no-startup-id mute-audio.sh

# MPRIS
# Play/Pause
bindsym $mod+space --release exec --no-startup-id mpris-play-pause.sh
# Next
bindsym $mod+period --release exec --no-startup-id playerctl next
# Previous
bindsym $mod+comma --release exec --no-startup-id playerctl previous
# Notify metadata
bindsym $mod+minus --release exec --no-startup-id notify-metadata.sh
# Focus current player
bindsym $mod+p --release exec --no-startup-id dbus-focus-player.sh

# OTHER
bindsym $mod+y exec --no-startup-id browse-yt-playlists.sh
# dmenu immediately gains focus and captures input so no need for --release
bindsym $mod+s exec dmenu-search.sh
# Lock session
bindsym $mod+l --release exec --no-startup-id lock-screen.sh
# Show current date highlighted
bindsym $mod+c --release exec --no-startup-id calendar.sh
# Open a new workspace
bindsym $mod+t exec --no-startup-id new-workspace.sh
# Empty trash
bindsym $mod+Shift+t --release exec --no-startup-id empty-trash.sh
# Update i3blocks Caps Lock blocklet
bindsym Caps_Lock --release exec pkill -SIGRTMIN+1 i3blocks

# Set a random wallpaper
bindsym $mod+w --release exec --no-startup-id xwallpaper --zoom $(find ~/Pictures/Wallpapers -type f | shuf | head -n1)
# Pick a wallpaper
bindsym $mod+Shift+w --release exec --no-startup-id find ~/Pictures/Wallpapers -type f | shuf | sxiv - -t

# XRANDR ----------------------------------------------------------------------
# Night mode
bindsym $mod+n --release exec --no-startup-id night-light.sh
# Adjust brightness (not the best way to to this. Should use xbacklight)
bindsym $mod+KP_Multiply exec --no-startup-id adjust-brightness.sh 0.1
bindsym $mod+KP_Divide  exec --no-startup-id adjust-brightness.sh -0.1

# IMAGE
bindsym Print --release exec --no-startup-id full-screenshot.sh
bindsym $mod+Shift+s --release exec --no-startup-id area-screenshot.sh

# MORE CONFIGS ----------------------------------------------------------------

# Specific window configs
# for_window [class="Tk" instance="tk"] floating enable
# for_window [class="Matplotlib" instance="matplotlib"] floating enable
# for_window [class="MATLAB R2022b - academic use" instance="sun-awt-X11-XFramePeer"] floating enable
# for_window [class="MATLABWindow" instance="MATLABWindow"] floating enable

# Assign programs to specific workspaces
assign [class="firefoxdeveloperedition" instance="Navigator"] " Browse"
assign [class="code-oss" instance="code-oss"] " Code"

# assign [class="MATLAB R2022b - academic use" instance="sun-awt-X11-XFramePeer"] MATLAB
# assign [class="MATLAB R2022b" instance="Matlab-GLEE"] SIMULINK

# Focus newly created workspaces
focus_on_window_activation focus
# Focus urgent workspaces
for_window [urgent="latest"] focus

# I3BAR -----------------------------------------------------------------------
# i3status generates status bar to use with i3bar
bar {
    # 3 options:
    status_command i3status --config "$XDG_CONFIG_HOME/i3status/conf" 
    # status_command i3blocks
    # status_command prepend-i3status.sh

    font pango: JetBrains Mono Bold 11
    # font pango: Iosevka Bold Extended 12

    # font pango: Mono 11
    # font pango: Mono Bold 11

    # font pango: Hack Bold 11
    # font pango: Hack 11

    # font pango: DejaVu Sans Book 11
    # font pango: Sans Bold 11
    # font pango: DejaVu Sans Bold 11
    
    position top
    # position bottom
	separator_symbol "  "
	colors{
		separator #00FFFF
        statusline #FFFFFF
		background #000000
        focused_workspace #FFFFFF #FFFFFF #000000
        inactive_workspace #FFFFFF #000000 #FFFFFF
        urgent_workspace   #F0000F #000000 #FFFFFF  
	}
}
